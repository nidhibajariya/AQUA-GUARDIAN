# Flask Configuration
FLASK_DEBUG=False
PORT=5000

# Database Configuration
# Supported types: sqlite, postgresql, mysql
DATABASE_TYPE=sqlite
DATABASE_URL=

# PostgreSQL Configuration (if using PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pollution_db
DB_USER=postgres
DB_PASSWORD=password

# MySQL Configuration (if using MySQL)
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=pollution_db
# DB_USER=root
# DB_PASSWORD=password

# Model Configuration
MODEL_PATH=./models/pollution_cnn.h5
MODEL_SAVE_DIR=./models
TRAINING_DATA_DIR=./data/training

# Satellite Imagery APIs
# Google Earth Engine
GOOGLE_EARTH_ENGINE_KEY=your_google_earth_engine_key_here

# Sentinel Hub
SENTINEL_HUB_URL=https://services.sentinel-hub.com/api/v1/process
SENTINEL_HUB_TOKEN=your_sentinel_hub_token_here

# NASA Landsat API
NASA_API_KEY=your_nasa_api_key_here

# Satellite Image Cache
SATELLITE_CACHE_DIR=./data/satellite_images

# Database Logging
DB_ECHO=False

# Security (for production)
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:4200

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/pollution_backend.log
